{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "type": "string",
            "defaultValue": "swarm",
            "metadata": {
                "description": "The name of the Managed Cluster resource."
            }
        },
        "dnsPrefix": {
            "type": "string",
            "defaultValue": "swarm-chrome",
            "metadata": {
                "description": "Optional DNS prefix to use with hosted Kubernetes API server FQDN."
            }
        },
        "osDiskSizeGB": {
            "type": "int",
            "defaultValue": 0,
            "metadata": {
                "description": "Disk size (in GiB) to provision for each of the agent pool nodes. This value ranges from 0 to 1023. Specifying 0 will apply the default disk size for that agentVMSize."
            },
            "minValue": 0,
            "maxValue": 1023
        },
        "kubernetesVersion": {
            "type": "string",
            "defaultValue": "1.22.6",
            "metadata": {
                "description": "The version of Kubernetes."
            }
        },
        "networkPlugin": {
            "type": "string",
            "defaultValue": "azure",
            "allowedValues": [
                "azure",
                "kubenet"
            ],
            "metadata": {
                "description": "Network plugin used for building Kubernetes network."
            }
        },
        "enableRBAC": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Boolean flag to turn on and off of RBAC."
            }
        },
        "enablePrivateCluster": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Enable private network access to the Kubernetes cluster."
            }
        },
        "enableHttpApplicationRouting": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Boolean flag to turn on and off http application routing."
            }
        },
        "enableAzurePolicy": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Boolean flag to turn on and off Azure Policy addon."
            }
        },
        "enableSecretStoreCSIDriver": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Boolean flag to turn on and off secret store CSI driver."
            }
        },
        "vnetSubnetID": {
            "type": "string",
            "defaultValue": "swarm-vnet",
            "metadata": {
                "description": "Resource ID of virtual network subnet used for nodes and/or pods IP assignment."
            }
        },
        "vnetAddressSpace": {
            "type": "string",
            "defaultValue": "10.0.0.0/8",
            "metadata": {
                "description": "The base vnet address space prefix."
            }
        },
        "serviceCidr": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "A CIDR notation IP range from which to assign service cluster IPs."
            }
        },
        "dnsServiceIP": {
            "type": "string",
            "defaultValue": "10.0.0.10",
            "metadata": {
                "description": "Containers DNS server IP address."
            }
        },
        "dockerBridgeCidr": {
            "type": "string",
            "defaultValue": "172.17.0.1/16",
            "metadata": {
                "description": "A CIDR notation IP for Docker bridge."
            }
        },
        "clusterVnetSubnetName": {
            "type": "string",
            "defaultValue": "default",
            "metadata": {
                "description": "Name of virtual network subnet used for the Cluster."
            }
        },
        "clusterVnetSubnetAddress": {
            "type": "string",
            "defaultValue": "10.240.0.0/16",
            "metadata": {
                "description": "Address of virtual network subnet used for the Cluster."
            }
        },
        "aciVnetSubnetName": {
            "type": "string",
            "defaultValue": "virtual-node-aci",
            "metadata": {
                "description": "Name of virtual network subnet used for the ACI Connector."
            }
        },
        "aciVnetSubnetAddress": {
            "type": "string",
            "defaultValue": "10.241.0.0/16",
            "metadata": {
                "description": "Address of virtual network subnet used for the ACI Connector."
            }
        },
        "aciConnectorLinuxEnabled": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Enables the Linux ACI Connector."
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "clusterId": "[resourceId('Microsoft.ContainerService/managedClusters', parameters('resourceName'))]",
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetSubnetID'))]",
        "clusterVnetId": "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('vnetSubnetID'), 'subnets', parameters('clusterVnetSubnetName')))]",
        "roleAuthorizationId": "Microsoft.Authorization/2b2db1d6-820b-4699-8642-4e3d9f0d29d5",
        "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/4d97b98b-1d4f-4787-a291-c67834d212e7')]",
        "roles": [
            {
                "clusterId": "[variables('clusterId')]",
                "vnetId": "[variables('clusterVnetId')]",
                "vnetRoleName": "[concat(parameters('vnetSubnetID'), '/', parameters('clusterVnetSubnetName'), '/', variables('roleAuthorizationId'))]",
                "roleDefinitionId": "[variables('roleDefinitionId')]"
            }
        ]
    },
    "resources": [
        {
            "apiVersion": "2021-07-01",
            "dependsOn": [
                "[variables('vnetId')]"
            ],
            "type": "Microsoft.ContainerService/managedClusters",
            "location": "[variables('location')]",
            "name": "[parameters('resourceName')]",
            "properties": {
                "kubernetesVersion": "[parameters('kubernetesVersion')]",
                "enableRBAC": "[parameters('enableRBAC')]",
                "dnsPrefix": "[parameters('dnsPrefix')]",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "osDiskSizeGB": "[parameters('osDiskSizeGB')]",
                        "count": 1,
                        "enableAutoScaling": false,
                        "vmSize": "Standard_A2_v2",
                        "osType": "Linux",
                        "storageProfile": "ManagedDisks",
                        "type": "VirtualMachineScaleSets",
                        "mode": "System",
                        "maxPods": 128,
                        "nodeLabels": {},
                        "nodeTaints": [],
                        "enableNodePublicIP": false,
                        "tags": {}
                    }
                ],
                "networkProfile": {
                    "loadBalancerSku": "standard",
                    "networkPlugin": "[parameters('networkPlugin')]",
                    "serviceCidr": "[parameters('serviceCidr')]",
                    "dnsServiceIP": "[parameters('dnsServiceIP')]",
                    "dockerBridgeCidr": "[parameters('dockerBridgeCidr')]"
                },
                "apiServerAccessProfile": {
                    "enablePrivateCluster": "[parameters('enablePrivateCluster')]"
                },
                "addonProfiles": {
                    "httpApplicationRouting": {
                        "enabled": "[parameters('enableHttpApplicationRouting')]"
                    },
                    "azurepolicy": {
                        "enabled": "[parameters('enableAzurePolicy')]"
                    },
                    "azureKeyvaultSecretsProvider": {
                        "enabled": "[parameters('enableSecretStoreCSIDriver')]"
                    },
                    "aciConnectorLinux": {
                        "enabled": "[parameters('aciConnectorLinuxEnabled')]",
                        "config": {
                            "SubnetName": "[parameters('aciVnetSubnetName')]"
                        }
                    }
                }
            },
            "tags": {},
            "sku": {
                "name": "Basic",
                "tier": "Free"
            },
            "identity": {
                "type": "SystemAssigned"
            }
        },
        {
            "apiVersion": "2020-11-01",
            "name": "[parameters('vnetSubnetID')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[variables('location')]",
            "properties": {
                "subnets": [
                    {
                        "name": "[parameters('clusterVnetSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('clusterVnetSubnetAddress')]"
                        }
                    },
                    {
                        "name": "[parameters('aciVnetSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('aciVnetSubnetAddress')]",
                            "delegations": [
                                {
                                    "name": "aciDelegation",
                                    "properties": {
                                        "serviceName": "Microsoft.ContainerInstance/containerGroups",
                                        "actions": [
                                            "Microsoft.Network/virtualNetworks/subnets/action"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ],
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressSpace')]"
                    ]
                }
            },
            "tags": {}

        },
        {
            "dependsOn": [
                "[variables('vnetId')]",
                "[variables('clusterId')]"
            ],
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('SubnetRoleAssignmentDeployment-', parameters('vnetSubnetID'), string(copyIndex()))]",
            "apiVersion": "2017-05-10",
            "copy": {
                "name": "loop0",
                "count": "[length(variables('roles'))]",
                "mode": "parallel"
            },
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "parameters": {
                    "role": {
                        "value": "[variables('roles')[copyIndex()]]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "role": {
                            "type": "object"
                        },
                        "location": {
                            "type": "string"
                        }
                    },
                    "resources": [
                        {
                            "apiVersion": "2018-09-01-preview",
                            "type": "Microsoft.Network/virtualNetworks/subnets/providers/roleAssignments",
                            "name": "[parameters('role').vnetRoleName]",
                            "location": "[parameters('location')]",
                            "properties": {
                                "roleDefinitionId": "[parameters('role').roleDefinitionId]",
                                "principalId": "[reference(parameters('role').clusterId, '2021-07-01').addonProfiles.aciConnectorLinux.identity.objectId]",
                                "scope": "[parameters('role').vnetId]"
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "controlPlaneFQDN": {
            "type": "string",
            "value": "[reference(concat('Microsoft.ContainerService/managedClusters/', parameters('resourceName'))).fqdn]"
        }
    }
}